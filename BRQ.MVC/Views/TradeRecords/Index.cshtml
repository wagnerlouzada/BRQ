@model IEnumerable<BRQ.MVC.ViewModels.TradeRecordViewModel>

@{ 
    ViewBag.Title = "Lista de Trades";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Criar Nova", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClientSector)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>

            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClientSector)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>

            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.TradeId }) |
                @*@Html.ActionLink("Detalhes", "Details", new { id = item.RegraId }) |*@
                @Html.ActionLink("Deletar", "Delete", new { id = item.TradeId })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
